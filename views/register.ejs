<div class="img-container">
  <img src="/images/register.png" class="top-img" />
</div>
<h1 class="heading">Register</h1>
<%- include ("./partials/messages"); %>
<form action="/users/register" method="POST">
  <label for="name" class="reg-input">Name</label>
  <input
    type="name"
    id="name"
    name="name"
    placeholder="Enter Name"
    value="<%= typeof name != 'undefined' ? name : '' %>"
    class="reg-input"
  />

  <label for="email" class="reg-input">Email</label>
  <input
    type="email"
    id="email"
    name="email"
    placeholder="Enter Email"
    value="<%= typeof email != 'undefined' ? email : '' %>"
    class="reg-input"
  />

  <label for="password" class="reg-input">Password</label>
  <input
    type="password"
    id="password"
    name="password"
    placeholder="Create Password"
    value="<%= typeof password != 'undefined' ? password : '' %>"
    class="reg-input"
  />

  <label for="password2" class="reg-input">Confirm Password</label>
  <input
    type="password"
    id="password2"
    name="password2"
    placeholder="Confirm Password"
    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
    class="reg-input"
  />
  <div class="subjects">
    <p class="subj-h reg-input">Subjects</p>
    <div class="checkboxes">
      <div class="subj-indiv">
        <input type="checkbox" name="math" />
        <label for="math">Mathematics</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="phy" />
        <label for="phy">Physics</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="economics" />
        <label for="economics">Economics</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="accountancy" />
        <label for="accountancy">Accountancy</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="english" />
        <label for="english">English</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="chemistry" />
        <label for="chemistry">Chemistry</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="biology" />
        <label for="biology">Biology</label>
      </div>
      <div class="subj-indiv">
        <input type="checkbox" name="geography" />
        <label for="geography">Geography</label>
      </div>
    </div>
  </div>

  <p class="role-h reg-input">Role</p>
  <div class="roles">
    <div class="role">
      <input type="radio" name="role" value="student" checked />
      <label for="role" class="role-label">Student</label>
    </div>

    <div class="role">
      <input type="radio" name="role" value="mentor" />
      <label for="role" class="role-label">Mentor</label>
    </div>
  </div>

  <button type="submit" class="reg-input">Register</button>
</form>
<p class="reg-log">Already Have An Account? <a href="/users/login">Login</a></p>
